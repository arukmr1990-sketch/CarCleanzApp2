@{
    ViewBag.Title = "Payment";
}

<section class="payment-section">
    <h2>Complete Your Payment</h2>

    <p>Hi <strong>@ViewBag.Name</strong>, please complete your payment to confirm your booking.</p>

    <div class="payment-box">
        <img src="@ViewBag.QRImage" alt="Payment QR" class="payment-qr" />
        <p class="upi-id">UPI ID: <strong>@ViewBag.UPIID</strong></p>
        <p>Scan this QR code with your UPI app and pay the required amount.</p>

       <a href="/Booking/Success?id=@booking.Id" class="btn btn-primary">Payment Done</a>
    </div>
</section>