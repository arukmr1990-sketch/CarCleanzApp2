@model CarCleanz.Models.Booking

@{
    ViewBag.Title = "Payment Page";
}

<section class="payment-section" style="text-align:center; padding:40px; color:white;">
    <h2 style="color:#ff2d2d;">Complete Your Payment</h2>

    <div style="margin:30px auto; max-width:400px; text-align:left; background:#111; padding:20px; border-radius:10px;">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Vehicle Type:</strong> @Model.VehicleType</p>
        <p><strong>Service Package:</strong> @Model.ServicePackage</p>
        <p><strong>Amount:</strong> ?@Model.Price</p>
    </div>

    <div style="margin:30px auto; max-width:280px;">
        <img src="/images/paymentQR.png" alt="Payment QR" style="width:100%; border-radius:8px;" />
        <p style="margin-top:15px;">Scan QR or pay via UPI ID:</p>
        <p style="color:#ff4d4d;"><strong>carcleanz@upi</strong></p>
    </div>

    <a href="/Booking/Success/@Model.Id"
       class="btn btn-danger"
       style="background:#ff2d2d; color:#fff; padding:10px 20px; border-radius:6px; text-decoration:none;">
       Payment Done
    </a>
</section>