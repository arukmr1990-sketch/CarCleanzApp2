@model CarCleanz.Models.Booking

<section class="booking-form" style="text-align:center; color:white; padding:40px;">
    <h2 style="color:#ff2d2d;">Book Your Car Cleaning</h2>

    <form asp-action="Create" method="post" style="max-width:500px; margin:auto; text-align:left;">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />

        <label>Phone</label>
        <input asp-for="Phone" class="form-control" required />

        <label>Address</label>
        <input asp-for="Address" class="form-control" required />

        <label>Vehicle Type</label>
        <select asp-for="VehicleType" class="form-control" required>
            <option value="">-- Select Vehicle Type --</option>
            <option value="Hatchback">Hatchback</option>
            <option value="Sedan">Sedan</option>
            <option value="SUV">SUV</option>
        </select>

        <label>House Type</label>
        <select asp-for="HouseType" class="form-control" required>
            <option value="">-- Select House Type --</option>
            <option value="Individual">Individual</option>
            <option value="Villa">Villa</option>
            <option value="Apartment">Apartment</option>
        </select>

        <label>Car Number</label>
        <input asp-for="CarNumber" class="form-control" placeholder="TN-22-AB-1234" required />

        <button type="submit" class="btn btn-danger" style="width:100%; margin-top:20px;">Proceed to Payment</button>
    </form>
</section>