@model IEnumerable<CarCleanz.Models.Booking>

@{
    ViewData["Title"] = "Admin - View Bookings";
}

<h2>Admin Panel - All Bookings</h2>

<table border="1" cellpadding="8" cellspacing="0" style="border-collapse:collapse; width:100%;">
    <tr style="background-color:#f2f2f2;">
        <th>ID</th>
        <th>Customer Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Vehicle Type</th>
        <th>Service Type</th>
        <th>Booking Date</th>
    </tr>
    @foreach (var booking in Model)
    {
        <tr>
            <td>@booking.Id</td>
            <td>@booking.Name</td>
            <td>@booking.Email</td>
            <td>@booking.Phone</td>
            <td>@booking.VehicleType</td>
            <td>@booking.ServicePackage</td>
            <td>@booking.BookingDate.ToString("dd-MM-yyyy")</td>
        </tr>
    }
</table>

<p style="margin-top:20px;">
    <a href="/Admin/Logout">Logout</a>
</p>