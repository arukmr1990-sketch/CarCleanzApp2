@{
    ViewData["Title"] = "Booking Success";
}

<div class="container mt-5 text-center">
    <div class="card shadow-lg border-0 rounded-4 p-4 mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <div class="mb-3">
                <img src="~/images/success.png" alt="Success" width="100" />
            </div>
            <h2 class="text-success fw-bold mb-3">Booking Successful!</h2>
            <p class="text-muted mb-4">
                Thank you for booking with <strong>Car Cleanz ????</strong><br />
                Your appointment has been confirmed successfully.
            </p>

            <div class="text-start bg-light p-3 rounded-4 border mb-4">
                <h5 class="text-dark mb-3">?? Booking Details</h5>
                <p><strong>Name:</strong> @ViewBag.Name</p>
                <p><strong>Email:</strong> @ViewBag.Email</p>
                <p><strong>Vehicle Type:</strong> @ViewBag.VehicleType</p>
                <p><strong>Service Package:</strong> @ViewBag.ServiceType</p>
                <p><strong>Date:</strong> @ViewBag.BookingDate</p>
                <p><strong>Contact:</strong> @ViewBag.Phone</p>
            </div>

            <a href="@Url.Action("Index", "Home")" class="btn btn-dark px-4 rounded-pill me-2">
                <i class="bi bi-house-door"></i> Back to Home
            </a>

            <a href="@Url.Action("Create", "Booking")" class="btn btn-outline-danger px-4 rounded-pill">
                <i class="bi bi-calendar-plus"></i> New Booking
            </a>
        </div>
    </div>
</div>