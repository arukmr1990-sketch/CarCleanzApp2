@model CarCleanz.Models.Booking

<div class="text-center mt-5">
    <h2 style="color: #28a745;">Booking Successful!</h2>
    <p>Thank you for booking with <strong>Car Cleanz</strong>.</p>
    <p>Your appointment has been confirmed successfully.</p>

    <div class="mt-4 text-left mx-auto" style="max-width: 400px; background: #fff; border-radius: 12px; padding: 20px;">
        <h4>Booking Details</h4>
        <hr />
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Vehicle Type:</strong> @Model.VehicleType</p>
        <p><strong>Service Package:</strong> @Model.ServicePackage</p>
        <p><strong>Booking Date:</strong> @Model.BookingDate</p>
    </div>

    <div class="mt-4">
        <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
</div>