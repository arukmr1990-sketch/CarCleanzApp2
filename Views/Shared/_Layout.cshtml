<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Car Cleanz - @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
   <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <script src="~/js/site.js" defer></script>
</head>
<header class="site-header">
  <div class="logo-wrap">
    <a href="/">
      <img src="~/images/logo.png" alt="Car Cleanz Logo" class="logo-img" />
    </a>
  </div>

  <nav class="main-nav">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/Booking/Create">Book</a></li>
      <li><a asp-controller="Admin" asp-action="Index">Admin</a></li>
<li><a href="#contact">Contact</a></li>
    </ul>
  </nav>
</header>
<body class="theme-redblack">
 <main class="content">
    @RenderBody()
</main>

<footer id="contact" style="background:#0a0a0a; color:#ccc; padding:50px 0; font-family:'Poppins',sans-serif;">
    <div style="max-width:1200px; margin:0 auto; display:flex; flex-wrap:wrap; justify-content:space-between;">

        <!-- Column 1 -->
        <div style="flex:1 1 300px; margin:10px 20px;">
            <h3 style="color:#ff2d2d; font-weight:600; margin-bottom:10px;">Car Cleanz</h3>
            <p style="font-size:14px; color:#aaa; line-height:1.6;">
                Farmfresh meets carwash? No, but we clean cars!<br>
                Your trusted partner for doorstep car cleaning services.
            </p>
        </div>

        <!-- Column 2 -->
        <div style="flex:1 1 300px; margin:10px 20px;">
            <h3 style="color:#ff2d2d; font-weight:600; margin-bottom:10px;">Contact Us</h3>
            <p style="font-size:14px; color:#aaa; margin:6px 0;">&#128205; No:15, Ganesh Nagar, Madhavaram Milk Colony, Chennai – 600051</p>
<p style="font-size:14px; color:#aaa; margin:6px 0;">&#128222; +91 99406 23869 / 63823 96014</p>
<p style="font-size:14px; margin:6px 0;">&#128231;
    <a href="mailto:carcleanz@gmail.com" style="color:#ff2d2d; text-decoration:none;">
        carcleanz@gmail.com
    </a>
</p>
        </div>

        <!-- Column 3 -->
        <div style="flex:1 1 200px; margin:10px 20px;">
            <h3 style="color:#ff2d2d; font-weight:600; margin-bottom:10px;">Quick Links</h3>
            <ul style="list-style:none; padding:0; line-height:1.8;">
                <li><a href="/" style="color:#ccc; text-decoration:none;">Home</a></li>
                <li><a href="/Home/About" style="color:#ccc; text-decoration:none;">About Us</a></li>
                <li><a href="/Booking/Create" style="color:#ccc; text-decoration:none;">Book Now</a></li>
                <li><a href="/Home/Contact" style="color:#ccc; text-decoration:none;">Contact</a></li>
            </ul>
        </div>
    </div>

    <hr style="border:0.5px solid #222; margin:30px 0;">
    <div style="text-align:center; font-size:13px; color:#777;">
        © 2025 <span style="color:#ff2d2d;">Car Cleanz</span> | All Rights Reserved
    </div>
</footer>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
