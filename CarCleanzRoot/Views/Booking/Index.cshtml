@{
    ViewData["Title"] = "Book a Car Wash";
}

<h2>Book Your Car Wash</h2>
<form method="post" action="/Booking/Submit" class="booking-form">
    <label>Name:</label>
    <input type="text" name="Name" required />

    <label>Phone:</label>
    <input type="text" name="Phone" required />

    <label>Car Type:</label>
    <select name="CarType" required>
        <option value="Hatchback">Hatchback - ₹499</option>
        <option value="Sedan">Sedan - ₹650</option>
        <option value="SUV">SUV - ₹750</option>
    </select>

    <label>Address:</label>
    <textarea name="Address" required></textarea>

    <label>Date:</label>
    <input type="date" name="Date" required />

    <button type="submit">Submit Booking</button>
</form>
