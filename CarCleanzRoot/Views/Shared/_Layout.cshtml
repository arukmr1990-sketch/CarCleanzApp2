                        </linearGradient>
                    </defs>
                    <path id="car-path" d="M10 60 Q40 20 90 30 Q140 40 180 20 L190 20 L190 60 Z" fill="url(#g1)" opacity="0.95"/>
                    <circle cx="55" cy="70" r="10" fill="#111"/>
                    <circle cx="145" cy="70" r="10" fill="#111"/>
                </svg>
            </a>
        </div>
        <nav class="main-nav">
           <a href="/">Home</a>
            <a href="/Booking">Book</a>
<a href="/Booking/Admin">Admin</a>

            <a href="#contact">Contact</a>
        </nav>
    </header>

    <main class="content">
        @RenderBody()
    </main>

